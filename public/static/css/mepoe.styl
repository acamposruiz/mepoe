@import 'public/static/css/variables.styl'

for color, i in color-secondary-list
    .color-secondary-{i}
        background-color: color

[class*="color-secondary"]
    color white


body
    padding-top: 70px
    background-color: color-bg-b
    padding-bottom 40px
    & > section
        &:last-of-type:not(.pagination-section)
            padding-bottom 20px

.nav-list li a
    fon-xl()

.starter-template
    padding: 40px 15px
    text-align: center

.tk-brandon-grotesque
    font-family: "brandon-grotesque",sans-serif

.tk-adobe-garamond-pro
    font-family: "adobe-garamond-pro",sans-serif

#header-logo
    background-color: white

header
    padding 0px

#top
    // margin-top 17px
    padding-top 95px

footer
    .footer-list-footer
        a
            fon-xl()
            color: color-primary-2

.btn-primary
    background-color color-primary-5
    border medium none
    &:hover
        background-color color-primary-2



.form-signin
    margin 0 auto
    max-width 330px
    padding 15px
    .checkbox
        font-weight normal
    .form-control
        box-sizing border-box
        font-size 16px
        height auto
        padding 10px
        position relative
    &:focus
        z-index 2
    input[type="email"]
        border-bottom-left-radius 0
        border-bottom-right-radius 0
        margin-bottom -1px
    input[type="password"]
        border-top-left-radius 0
        border-top-right-radius 0
        margin-bottom 10px

.form-signin .form-signin-heading, .form-signin .checkbox
    margin-bottom 10px

.container > .alert
    margin-top 30px

.avatar-change
    form
        input[type="file"]
            display inline

article
    &.poem
        padding-bottom 40px
        // .poem-image
        //     img
        // & > section
        //     h2
        //     h3
        //     .poem-text
        //     .show-more
        //         .btn

.pagination-section
    .pagination
        display table
        margin auto
        .page-links
            a, span
                border-radius: 45px
                background-color color-primary-5
                font-size: 26px
                margin: 13px
                padding: 20px
                color white
                &:hover
                    text-decoration none
                    background-color color-primary-2
        .page-links span
            opacity 0.2
            background-color grey
            &:hover
                background-color grey

