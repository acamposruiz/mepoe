@import 'public/static/css/variables.styl'

for color, i in color-secondary-list
    .color-secondary-{i}
        background-color: color
    .color-secondary-hbgli-{i}
        background-color: color
        &:hover
            background-color: lightness(color,70%)
    .color-secondary-hbgdar-{i}
        background-color: color
        &:hover
            background-color: saturation(color,70%)

[class*="color-secondary"]
    color white


body
    padding-top: 70px
    background-color: color-bg-b
    padding-bottom 40px
    & > section
        &:last-of-type:not(.pagination-section)
            padding-bottom 20px

.poem
    h2.title
        .btn.fa
            fon-xxxxl()
            opacity 0.2
            &:hover
                opacity 1
            &.fa-chevron-left
                float left
            &.fa-chevron-right
                float right

.nav-list li a
    fon-xl()

.fa,
.glyphicon
    color color-secondary-2
    padding 10px 5px
    font-size 30px
    .desc
        fon-xl()
        padding-left 10px
        padding-right 15px
    &:hover
        text-decoration none


.starter-template
    padding: 40px 15px
    text-align: center

.tk-brandon-grotesque
    font-family: "brandon-grotesque",sans-serif

.tk-adobe-garamond-pro
    font-family: "adobe-garamond-pro",sans-serif

#header-logo
    background-color: white

header
    padding 0px

#top
    // margin-top 17px
    padding-top 95px
    .nav-top
        .container
            .row
                .profile-element
                    padding 0
                &.profile-nav
                    .nav-list
                        margin 0px
                        padding 0px
                        li
                            position relative
                            .fa
                                fon-xxxxxl()
                                border-radius 10px
                                color #fff
                                margin 0 0 15px 20px
                                padding 15px
                                text-align center
                                width 110px
                                .desc
                                    fon-l()

.nav-list li
    a, button
        margin 0 0 0 2em

footer
    .footer-list-footer
        a
            fon-xl()
            color: color-link

.btn-primary
    background-color color-primary-5
    border medium none
    &:hover
        background-color color-primary-2

.btn-link
    color: color-link
    &:hover
        text-decoration none
        color: color-link-hover



.form-signin
    margin 0 auto
    max-width 330px
    padding 15px
    .checkbox
        font-weight normal
    .form-control
        box-sizing border-box
        font-size 16px
        height auto
        padding 10px
        position relative
    &:focus
        z-index 2
    input[type="email"]
        border-bottom-left-radius 0
        border-bottom-right-radius 0
        margin-bottom -1px
    input[type="password"]
        border-top-left-radius 0
        border-top-right-radius 0
        margin-bottom 10px

.form-signin .form-signin-heading, .form-signin .checkbox
    margin-bottom 10px

.container > .alert
    margin-top 30px

.avatar-change
    form
        input[type="file"]
            display inline

article
    &.poem
        padding-bottom 40px

section
    .poem-text
        margin-top 40px
        pre
            background none repeat scroll 0 0 rgba(0, 0, 0, 0)
            border medium none
            white-space pre-line
            line-height 1.5em
            font-weight 200
            letter-spacing 0.03em
            fon-xxxl()
            &::first-letter
                text-transform uppercase
    &[class*="color-secondary"]
        .poem-text
            pre
                color white


.pagination-section
    .pagination
        display table
        margin auto
        .page-links
            a, span
                border-radius: 45px
                background-color color-primary-5
                font-size: 26px
                margin: 13px
                padding: 20px
                color white
                &:hover
                    text-decoration none
                    background-color color-link
        .page-links span
            opacity 0.2
            background-color grey
            &:hover
                background-color grey

