@import 'public/static/css/variables.styl'

// for color in colors
//     {color[0]} = color[1]
//     .{color}
//         background-color color[1]


for color, i in color-secondary-list
    .color-secondary-{i}
        background-color: color
    .color-secondary-{i}-color
        color: color
    .color-secondary-hbgli-{i}
        background-color: color
        &:hover
            background-color: lighten(color,45%)
    .color-secondary-hbgdar-{i}
        background-color: color
        &:hover
            background-color: darken(color,45%)

for color, i in color-primary-list
    .color-primary-{i}
        background-color: color
    .color-primary-{i}-color
        color: color
    .color-primary-hbgli-{i}
        background-color: color
        &:hover
            background-color: lighten(color,45%)
    .color-primary-hbgdar-{i}
        background-color: color
        &:hover
            background-color: darken(color,45%)

[class*="color-secondary"]
    color white


body
    color color-secondary-9
    padding-top: 70px
    background-color: color-bg-b
    padding-bottom 40px
    & > section
        &:last-of-type:not(.pagination-section)
            padding-bottom 20px

.color-link-color
    color color-link

.poem
    .avatar-container
        margin-bottom 10px
    .title-container
        h2.title
            display inline
            .btn.fa
                fon-xxxxl()
                opacity 0.2
                &:hover
                    opacity 1
                &.fa-chevron-left
                    float left
                &.fa-chevron-right
                    float right
        & > .btn-group
            display inline
            .favorite
                display inline
                vertical-align: top;
                button, i
                    padding 0px
                    margin 0px

.nav-list li a
    fon-xl()

.fa,
.glyphicon
    color color-secondary-2
    padding 10px 5px
    font-size 30px
    .desc
        fon-xl()
        padding-left 10px
        padding-right 15px
    &:hover
        text-decoration none


.starter-template
    padding: 40px 15px
    text-align: center

.tk-brandon-grotesque
    font-family: "brandon-grotesque",sans-serif

.tk-adobe-garamond-pro
    font-family: "adobe-garamond-pro",sans-serif

#header-logo
    background-color: white

header
    padding 0px

#top
    // margin-top 17px
    padding-top 95px
    .nav-top
        .container
            .row
                .profile-element
                    padding 0
                &.profile-nav
                    .nav-list
                        margin 0px
                        padding 0px
                        li
                            position relative
                            .fa
                                fon-xxxxxl()
                                border-radius 10px
                                color #fff
                                margin 0 0 15px 20px
                                padding 15px
                                text-align center
                                width 110px
                                .desc
                                    fon-l()

.nav-list li
    a, button
        margin 0 0 0 2em

footer
    .footer-list-footer
        a
            fon-xl()
            color: color-link

.btn
    &.btn-primary
        background-color color-primary-5
        border medium none
        &:hover
            background-color color-primary-2

    &.btn-link
        color: color-link
        .fa, .glyphicon
            color: color-link
        &:hover
            text-decoration none
            color: color-link-hover



.form-signin
    margin 0 auto
    max-width 330px
    padding 15px
    .checkbox
        font-weight normal
    .form-control
        box-sizing border-box
        font-size 16px
        height auto
        padding 10px
        position relative
    &:focus
        z-index 2
    input[type="email"]
        border-bottom-left-radius 0
        border-bottom-right-radius 0
        margin-bottom -1px
    input[type="password"]
        border-top-left-radius 0
        border-top-right-radius 0
        margin-bottom 10px

.form-signin .form-signin-heading, .form-signin .checkbox
    margin-bottom 10px

.container > .alert
    margin-top 30px

.avatar-change
    form
        input[type="file"]
            display inline

article
    &.poem
        padding-bottom 40px

section
    .poem-text
        margin-top 40px
        pre
            background none repeat scroll 0 0 rgba(0, 0, 0, 0)
            border medium none
            white-space pre-line
            line-height 1.5em
            font-weight 200
            letter-spacing 0.03em
            fon-xxxl()
            &::first-letter
                text-transform uppercase
    &[class*="color-secondary"]
        .poem-text
            pre
                color white


.pagination-section
    .pagination
        display table
        margin auto
        .page-links
            a, span
                border-radius: 45px
                background-color color-primary-5
                font-size: 26px
                margin: 13px
                padding: 20px
                color white
                &[href^="/poem"]
                    background-color color-primary-0
                &:hover
                    text-decoration none
                    background-color color-link
        .page-links span
            opacity 0.2
            background-color grey
            &:hover
                background-color grey

